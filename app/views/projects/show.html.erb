<h1>Projects#show</h1>
<p>Find me in app/views/projects/show.html.erb</p>

<h2><%= @project.title %></h2>

<% if @project.todos.any? %>
  <ul>
    <% @project.todos.each do |todo| %>
      <li><%= todo.content %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @todo, local: true do |f| %>
  <% if @todo.errors.any? %>
    <ul>
      <% @todo.errors.full_messages.each do |message| %>
        <li><% message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.label :content %>
  <%= f.text_field :content %>

  <%= f.hidden_field :project_id, value: @project.id %>

  <%= f.submit %>
<% end %>

<%= link_to '一覧', projects_path %>
