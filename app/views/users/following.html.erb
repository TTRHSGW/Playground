<h1>Users#following</h1>
<p>Find me in app/views/users/following.html.erb</p>

<% if @following.any? %>
  <% @following.each do |following| %>
    <%= following.username %>
      <% if current_user.following?(following) %>
        <%= form_with model: current_user.active_relationships.find_by(followed_id: following.id),
          method: :delete do |f| %>
          <%= f.submit "フォロー解除" %>
        <% end %>
      <% else %>
        <%= form_with model: current_user.active_relationships.buid do |f| %>
          <%= hidden_field_tag :followed_id, following.id %>
          <%= f.submit "フォロー" %>
        <% end %>
      <% end %>
  <% end %>
<% end %>
