
<h2><%= @user.username %></h2>
      <div id="follow_form">
        <% if current_user.following?(@user) %>
          <%= render 'users/unfollow', user: @user%>
        <% else %>
          <%= render 'users/follow', user: @user%>
        <% end %>
      </div>

<% if @user.tweets.any? %>
  <ul>
    <% @user.tweets.each do |tweet| %>
      <li><%= tweet.content %></li>
    <% end %>
  </ul>
<% end %>
