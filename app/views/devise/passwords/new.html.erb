<div class="box">
  <div class="box-inner">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <h2>パスワードリセット</h2>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="box-email">
      <%= f.label :email, "Eメール" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="box-login">
      <%= f.submit "パスワード初期化のための手順を送信" %>
    </div>
  <% end %>

  <div class="box-newuser">
    <p><span>------------</span>アカウントをお持ちですか？<span>------------</span></p>
    <%= link_to "ログイン", new_user_session_path%>
  </div>
  <br>
  <div class="box-newuser">
    <p><span>------------</span>新しいお客様ですか？<span>------------</span></p>
    <%= link_to "新しいアカウントを作成", new_user_registration_path%>
  </div>

  </div>
</div>
